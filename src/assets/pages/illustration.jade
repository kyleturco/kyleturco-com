.illustration-background
  .container
    .illustration-section.paintings-drawings.col-md-12
      h3 Paintings/Drawings
      .paintings-section
        .thumb-row
          button.art-thumb(ng-click='art.modalLoad()' ng-repeat='painting in art.paintings')
            img.art-thumb(src="{{painting.url}}")

            .modal.fade(id="artModal" tabindex="-1" role="dialog" aria-labelledby="artModal")
              .modal-dialog
                .modal-content
                  .modal-body
                    img.art-large(src="{{painting.url}}")
                    h3 {{painting.title}}
                    p {{painting.medium}}
                    p {{painting.notes}}

