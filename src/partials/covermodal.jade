.modal.fade(id="artModal" tabindex="-1" role="dialog" aria-labelledby="artModal" aria-hidden="true")
  .modal-dialog
    .modal-content
      .modal-header
        button.close(data-dismiss="modal")
          span &times;
      .modal-body
        img.art-large(src="{{cover.url}}")
        h3 {{cover.title}}
        p {{cover.medium}}
        p {{cover.notes}}
      .modal-footer
        button.btn.btn-primary(data-dismiss="modal") Cancel
